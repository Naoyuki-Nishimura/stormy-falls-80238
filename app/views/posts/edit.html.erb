<div class="main posts-new">
  <div class="container"><br/><br/>
    <h5 class="form-heading">編集する</h5>
      <%= form_tag("/posts/#{@post.id}/update")  do %>
      <div class="form">
        <div class="form-body">
          Title:<h5><%= @post.title %></h5>
          <textarea name="content" style="display:none;" id="content"><%= @post.content %></textarea>
          <trix-editor input="content" name="content"></trix-editor><br/>
          <button class="btn waves-effect waves-light" type="submit" name="action">更新する</button>
        </div>
      </div>
      <% end %>
  </div>
</div>