<div class="main posts-new">
  <div class="container"><br/><br/>
    <h5 class="form-heading">新規投稿</h5>
      <%= form_tag "/posts/create" do %>
      <div class="form">
        <div class="form-body">
          <strong>Title:</strong><input name="title" id="title">
          <textarea name="content" style="display:none;" id="content"></textarea>
          <trix-editor input="content" name="content"></trix-editor><br/>
          <button class="btn waves-effect waves-light" type="submit" name="action">新規投稿</button>
        </div>
      </div>
      <% end %>
  </div>
</div>