<div class="container">
  <div class="row">
    <div class="col m6 offset-m3 center">
      <br/>
      
      <h5>プロフィール編集</h5></h5><br/></br>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render partial: "shared/devisemessage" %>
      
        <div class="input-field">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email, autofocus: false, autocomplete: "email" %>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="input-field">
          <%= f.label :新しいパスワード %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      
        <div class="input-field">
          <%= f.label :パスワード再確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      
        <div class="input-field">
          <%= f.label :現在のパスワード %><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
        
        <div class="field">
          <%= f.label :プロフィール画像 %><br />
          <%= f.file_field :image %>
        </div>
        <br/><br/>
         
        <button class="btn waves-effect waves-light" type="submit" name="action">更新</button>
      <% end %>
      <br/><br/>
      
      <h5><em>アカウントの削除</em></h5>
      
      <%= button_to "アカウントを削除する", registration_path(resource_name), :class =>"btn waves-effect waves-light", data: { confirm: "Are you sure?" }, method: :delete %><br/>
      
      <%= link_to "戻る", :back %>
    </div>
  </div>
</div>
