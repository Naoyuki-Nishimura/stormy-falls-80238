 <div class="container"><br/>
   <div class="row">
     <div class="col m6 offset-m3 center">
      <h5 style="text-align: center;"><strong>新規登録</strong></h5><br/>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render partial: "shared/devisemessage" %>
        
        <div class="input-field">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :name, autocomplete: "name", :class => "validate" %>
        </div>
      
        <div class="input-field">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email, autocomplete: "email", :class => "validate" %>
        </div>
      
        <div class="input-field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "off", :class => "validate" %>
        </div>
      
        <div class="input-field">
          <%= f.label :パスワード再確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "validate" %>
        </div>
      
        <button class="btn waves-effect waves-light" type="submit" name="action">新規登録</button>
      <% end %>
    </div>
  </div>
  
</div><br/><br/>