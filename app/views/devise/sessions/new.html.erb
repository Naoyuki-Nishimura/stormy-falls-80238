<div class="container">
  <div class="row">
    <div class="col m6 offset-m3 center">
      <br/>
      <h5 style="text-align: center;"><strong>ログイン</strong></h5><br/>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render partial: "shared/devisemessage" %>
      
      
        <div class="input-field">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email, autocomplete: "email", :class => "validate" %>
        </div>
      
        <div class="input-field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "validate" %>
        </div><br/>
      
      
       <button class="btn waves-effect waves-light" type="submit" name="action">Login</button>
      <% end %>
    </div>
  </div>

</div><br/><br/>
